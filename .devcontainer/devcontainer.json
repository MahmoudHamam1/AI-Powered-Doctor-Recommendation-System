{
  "name": "aws agentcore rag chatbot environment",
  "build": {
        "context": "..",
        "dockerfile": "Dockerfile"
  },
  "postCreateCommand": "sudo uv pip install --system -r requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "amazonwebservices.amazon-q-vscode",
        "ms-vsliveshare.vsliveshare",
        "hashicorp.terraform",
        "ms-python.black-formatter",
        "ms-python.isort",
        "bierner.markdown-mermaid"
      ],
      "settings": {
        "python.analysis.typeCheckingMode": "basic",
        "workbench.startupEditor": "readme",
        "amazonQ.telemetry": true,
        "amazonQ.shareContentWithAWS": false
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "1.13.4"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },
  "mounts": [
    // "source=${localEnv:HOME}/.aws,target=/home/vscode/.aws,type=bind,consistency=cached"
    "source=${env:USERPROFILE}\\.aws,target=/home/vscode/.aws,type=bind"
  ],
  "containerEnv": {
    "CONTEXT7_API_KEY": "${localEnv:CONTEXT7_API_KEY}",
    "TERRAFORM_BACKEND_BUCKET": "agentcore-rag-chatbot-tfstate",
    "TERRAFORM_BACKEND_REGION": "us-west-2",
    "TERRAFORM_BACKEND_DYNAMODB_TABLE": "terraform-state-locks"
  },
  "runArgs": ["--env-file", ".devcontainer/.env"]

}